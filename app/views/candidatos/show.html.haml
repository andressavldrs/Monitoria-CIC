
-# in app/views/movies/show.html.haml

%h2 Detalhes de #{@candidato.nome}

%ul#details
	%li
		Nome:
		= @candidato.nome
	%li
		Matricula:
		= @candidato.matricula
	%li
		Disciplina:
		= @candidato.disciplina
	%li
		Semestre:
		= @candidato.semestre
	%li
		Tipo de Monitoria:
		= @candidato.monitoria
	%li
		Prioridade:
		= @candidato.prioridade

= link_to image_tag('voltar.png'), candidatos_url
= link_to image_tag('editar.png'), edit_candidato_url(@candidato)
= link_to image_tag('deletar.png'), candidato_url(@candidato), :method => :delete
